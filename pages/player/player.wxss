}

.chapter {
  width: 100%;
  /* height: 100%; */
  /* margin: 0 auto; */
  /* background: rgba(0, 0, 0, 0.5); */
  margin-bottom: 100rpx;
  /* transform: translateY(-100px)rotate(0deg); */
  position: fixed;
  bottom: 0rpx;
  /* z-index: 101; */
}

.layer {
  left: 0;
  top: 0;
  width: 100%;
  height: 108%;
  background: rgba(0, 0, 0, 0.5);
  overflow: hidden; 
  z-index: 1;
}

.xxx {
  position: relative;
  width: 100%;
  height: 0rpx;
  transition: all 1s ease-in-out;
  background-color: #fff;
  z-index: 100;
}

