.container {
  display: flex;
  justify-content: center;
  width: 100%;
  height: auto;
  margin-bottom: 100rpx;
}

.comment-bottom {
  height: auto;
}

.comment-comment {
  padding: 22rpx 29rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
}

.comment-comment-left {
  /* width: 300rpx; */
  display: flex;
  justify-content: flex-start;
  align-items:  center
}

.comment-comment-left image {
 width: 50rpx;
 height: 50rpx;
 border-radius: 50%;
 margin-right: 25rpx;
}

.comment-comment-left view:first-child{
  max-width: 300rpx;
  min-width: 60rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.comment-comment-left view:last-child {
  margin-left: 20rpx;
  color: #b3b3b3;
  display: inline-block;
}

.content.on {
  display: block;
  text-overflow: clip;
  overflow: visible;
}

.comments {
  height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  text-overflow: -o-ellipsis-lastline;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  padding: 0 25rpx;
  font-size: 30rpx;
  color: #888;
  /* border-bottom: 2rpx solid #eee; */
}

.audition-open {
  width: 30rpx;
  margin: 0 auto;
}

.audition-open image {
  width: 30rpx;
  height: 20rpx;
}



.comment{
